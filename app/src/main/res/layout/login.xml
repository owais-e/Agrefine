<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/bgblur">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/darkFont2"/>
    <EditText
        android:id="@+id/user_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Email"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        android:textColor="@color/darkFont2"
        android:textColorHint="@color/darkFont2"
        />
    <EditText
        android:id="@+id/user_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Password"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:autofillHints="password"
        android:inputType="textPassword"
        android:textColor="@color/darkFont2"
        android:textColorHint="@color/darkFont2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textColor="@color/darkFont2"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/forgetpassword"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/ProgressBar"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/finalGreen"
        android:text="Login"
        android:elevation="15dp"
        android:textSize="20sp"
        android:id="@+id/login"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account ?"
            android:textColor="@color/darkFont"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/finalGreen"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:id="@+id/registeraccount"
            />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>