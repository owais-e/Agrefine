<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewProductUploadActivity"
    android:background="@color/finalWhite"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload New Product"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="35dp"
        android:textSize="30dp"
        android:textColor="#000"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_edit_text"
        android:padding="10dp"
        android:hint="Product name"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:textColor="@color/darkFont2"
        android:textColorHint="@color/darkFont2"
        android:id="@+id/productfertilizername"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edit_text"
        android:padding="10dp"
        android:inputType="text"
        android:hint="Product Price"
        android:textColor="@color/darkFont2"
        android:textColorHint="@color/darkFont2"
        android:id="@+id/productfertilizerprice"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:lines="2"
        android:maxLines="6"
        android:background="@drawable/custom_edit_text"
        android:padding="10dp"
        android:hint="Product discription"
        android:inputType="text"
        android:textColor="@color/darkFont2"
        android:textColorHint="@color/darkFont2"
        android:id="@+id/productfertilizerdiscription"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/green"
        android:id="@+id/productfertilizerimage"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Upload"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/finalGreen"
        android:textColor="@color/finalWhite"
        android:id="@+id/productfertilizerupload"/>




</androidx.appcompat.widget.LinearLayoutCompat>